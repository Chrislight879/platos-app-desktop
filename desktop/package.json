{
  "name": "platos-desktop",
  "version": "1.0.0",
  "description": "Aplicaci√≥n desktop para generador de platos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.generador.platos",
    "productName": "Generador de Platos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!backend/node_modules",
      "!**/*.log"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}